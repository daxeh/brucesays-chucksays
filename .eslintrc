{
	"plugins": [
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"rules": {
		"spaced-comment": [2, "always"],
		"vars-on-top": 2,
		"no-undef": 2,
		"no-undefined": 2,
		"comma-dangle": [2, "never"],
		"quotes": [2, "single", "avoid-escape"],
		"semi": [2, "always"],
		"guard-for-in": 2,
		"no-eval": 2,
		"no-with": 2,
		"valid-typeof": 2,
		"no-unused-vars": 2,
		"no-continue": 1,
		"no-extra-semi": 1,
		"no-unreachable": 1,
		"no-unused-expressions": 1,
		"no-magic-numbers": 1,
		"max-len": [1, 80, 4],
		"indent": [2, 4],
		"space-in-parens": [0, "never"],
		"template-curly-spacing": [2, "always"],
		"array-bracket-spacing": [2, "always"],
		"object-curly-spacing": [2, "always"],
		"computed-property-spacing": [2, "always"],
		"no-multiple-empty-lines": [2, {
			"max": 1,
			"maxEOF": 0,
			"maxBOF": 0
		}],
		"no-use-before-define": [2, {
			"functions": false
		}],
		"prefer-const": 1,
		"complexity": [1, 5]
	}
}
